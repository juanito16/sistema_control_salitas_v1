<div class="span12">
	<%@parlo=Parlo.where("id=?",params[:id]).first%>
	<h3>Reservaciones: <%=@parlo.name_parlo%> <span class="badge badge-inverse"><%=@reservation_for_parlo.size%></span></h3>
<table class="table table-striped table-bordered table-condensed">
	<thead>
		<tr>
			<th>Reservacion</th>
			<th>Nombre Empleado</th>
			<th>Empresa</th>
			<th>Status</th>
			<th>Inicio</th>
			<th>Final</th>
			<th>Reservations</th>
		</tr>
	</thead>
	<tbody>
		<%@reservation_for_parlo.each do |reservation_parlo| %>
		<tr>
			<td><%=image_tag(reservation_parlo.employee.photo.profile)%></td>
			<td><%=reservation_parlo.employee.name%></td>
			<td><%=reservation_parlo.employee.company.name%></td>
			<td><%=reservation_parlo.status%></td>
			<td><%=reservation_parlo.start_time.strftime("%I:%M %p")%></td>
			<td><%=reservation_parlo.end_time.strftime("%I:%M %p")%></td>
			<td><%=reservation_parlo.date_reservation.strftime("%d-%b-%Y")%></td>
			<td><%=link_to "<i class='icon-edit icon-white'></i>".html_safe,edit_reservation_path(reservation_parlo),class: "btn btn btn-info"%></td>
			<td><%=link_to "<i class='icon-trash icon-white'></i>".html_safe,destroy_reservations_parlo_path(reservation_parlo),method: "delete" ,class: "btn btn-danger",data: { confirm: 'Are you sure?' }%></td>
		</tr>
		<%end%>
	</tbody>
</table>
</div>