<div class="span12">
<h1>Lista de reservaciones</h1>
<table class="table table-striped table-bordered table-condensed" id="reservations">
  <thead>
    <tr>
      <th>Salita</th>
      <th>Empleado</th>
      <th>Estado</th>
      <th>Fecha reservacion</th>
      <th>Hora inicio</th>
      <th>Hora final</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.parlo.name_parlo %></td>
        <td><%= reservation.employee.name %></td>
        <td><%= reservation.status==0? "Ocupada": "Reservada" %></td>
        <td><%= reservation.date_reservation %></td>
        <td><%= reservation.start_time.strftime("%I:%M %p") %></td>
        <td><%= reservation.end_time.strftime("%I:%M %p") %></td>
        <td><%= link_to '<i class="icon-zoom-in icon-white"></i>'.html_safe, reservation,class: "btn btn-info" %></td>
        <td><%= link_to '<i class="icon-edit icon-white"></i>'.html_safe, edit_reservation_path(reservation),class: "btn btn-success" %></td>
        <td><%= link_to '<i class="icon-trash icon-white"></i>'.html_safe, reservation, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nueva reservacion', new_reservation_path,class: "btn btn-primary" %>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('#reservations').dataTable();
});
</script>
