<% flash.each do |name, msg| %>
        <div class ="alert alert-block alert-<%=name == :notice ? 'success' : name== :alert ? 'alert' : 'error'%>">
                <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                </button>
                <%=msg%>
        </div>
<% end %>