<%= form_for(@parlo,html:{class: 'form-horizontal'}) do |f| %>
<% if @parlo.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@parlo.errors.count, "error") %> prohibited this parlo from being saved:</h2>

  <ul>
    <% @parlo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="control-group">
  <%= f.label :name_parlo,class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :name_parlo %>
  </div>
</div>
<div class="control-group">
  <%= f.label :status,class: 'control-label' %>
  <div class="controls">
    <%= f.number_field :status %>
  </div>
</div>
<div class="control-group">
  <%= f.label :country,class: 'control-label' %>
  <div class="controls">
    <%= f.select :country_id, Country.all.collect {|p| [ p.name_country, p.id ] }, { include_blank: true } %>
  </div>
</div>
<div class="controls">
  <%= f.submit %>
</div>
<% end %>
