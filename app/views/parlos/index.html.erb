<table class="table table-striped table-bordered table-condensed" id="table_salitas">
  <thead>
    <tr>
      <th>Name parlo</th>
      <th>Country</th>
      <th>Mostrar</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody>
    <% @parlos.each do |parlo| %>
      <tr>
        <td><%= parlo.name_parlo %></td>
        <td><%= parlo.country.name_country %></td>
        <td><%= link_to parlo, class: 'btn btn-info' do%>
          <i class="icon-zoom-in icon-white"></i>
          <%end%>
        </td>
        <td>
            <%= link_to edit_parlo_path(parlo),class: 'btn btn-success' do%>
              <i class="icon-edit icon-white"></i>
            <%end%>
            </td>
            <td>
            <%= link_to parlo, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-danger' do%>
              <i class="icon-trash icon-white"></i>
            <%end%>

        </td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to 'New Parlo', '', class: 'btn btn-primary pull-right', id: 'new_parlo' %>
<div id="modal_new_parlo" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Add Parlo</h3>
  </div>
  <div class="modal-body">
    <%=render 'form'%>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
      $('#table_salitas').dataTable();

      $('#new_parlo').on('click',function(e){
        e.preventDefault();
          $('#modal_new_parlo').modal('show');
      });
  });
</script>